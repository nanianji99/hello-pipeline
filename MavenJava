pipeline {
    agent none 
    stages {
        stage('Example Build') {
            agent { docker 'gradle:latest' } 
            steps {
                echo 'Hello, gradle'
                sh 'gradle --version'
            }
        }
        stage('Example Test') {
            agent { docker 'openjdk:8-jre' } 
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}
